<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Cinderella</p>
            <div class="list-group">
                <li class="list-group-item active">
                    <a href="/products">Continue Shopping</a>
                </li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= product.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$ <%= product.price %> / LB</h4>
                    <h4><a><%=product.name%></a></h4>
                    <p><%= product.description %></p>
                    <p>
                        <em>Submitted By <%= product.author.username %></em>
                    </p>
                    <% if(currentUser && product.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/products/<%= product._id %>/edit">Edit</a>
                        <form id="delete-form" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
                <div style="width: 30%; margin: 25px auto;">
                    <form id="buy-form" action="/products/<%= currentUser._id %>/<%= product._id %>" method="POST">
                        <button class="btn btn-lg btn-success">Add to Cart</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/products/<%= product._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% product.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= comment.created.toDateString() %></span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/products/<%=product._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form id="delete-form" action="/products/<%=product._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>